{
  "manifest_version": 3,
  "name": "Next Song Shortcut",
  "version": "1.0",
  "description": "Play the next song on supported websites with a custom shortcut key.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "commands": {
    "next_song": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Play next song"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
