{
  "manifest_version": 3,
  "name": "Next Song Shortcut",
  "version": "1.0",
  "description": "Play the next song on supported websites using a keyboard shortcut.",
  "permissions": ["tabs", "scripting", "activeTab"],
  "action": {
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "next_song": {
      "suggested_key": {
        "default": "Alt+Shift+N"
      },
      "description": "Play the next song on supported websites"
    }
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}


